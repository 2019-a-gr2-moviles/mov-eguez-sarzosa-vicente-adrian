<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="369dp"
            android:layout_height="203dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.47"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_segundo"
            android:id="@+id/cly_fragmentos" app:layout_constraintVertical_bias="1.0">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Primer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_primer" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.053" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Segundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_segundo"
            app:layout_constraintTop_toTopOf="@+id/btn_primer"
            app:layout_constraintBottom_toBottomOf="@+id/btn_primer"
            app:layout_constraintStart_toEndOf="@+id/btn_primer"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tercero"
            app:layout_constraintTop_toTopOf="@+id/btn_segundo"
            app:layout_constraintBottom_toBottomOf="@+id/btn_segundo"
            app:layout_constraintStart_toEndOf="@+id/btn_segundo" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>